<% content_for :content do -%>
  <div class="container_12 clearfix">
    <div class="grid_12">
      <h1>New Measurement</h1>
      <% if @user %>
        <h2><%= h @user.login %></h2>
      <% end -%>
      <% form_for(@measurement) do |f| %>
        <%= f.error_messages %>
        <%= f.hidden_field :user_id %><br />
        Weight<br />
        <%= f.text_field :weight %><br />
        BMI<br />
        <%= f.text_field :bmi %><br />
        V02 Max<br />
        <%= f.text_field :v02_max %><br />
        <p>
          <%= f.submit 'Create' %>
        </p>
      <% end %>
      <br />
      <% if @user %>
        <%= link_to 'Back', user_measurements_path(@user) %>
      <% end -%>
    </div>
  </div>
<% end %>