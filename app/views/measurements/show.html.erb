<% content_for :content do -%>
  <div class="container_12 clearfix">
    <div class="grid_12">
      <h1>Showing Measurement</h1>
      <% if @measurement %>
        <h2><%= h @measurement.user.login %></h2>
      <% end -%>
      <table cellpadding="0" cellspacing="0">
        <tr>
          <td class="item">Measure Date</td>
          <td><%= h @measurement.measure_date %></td>
        </tr>
        <tr>
          <td class="item">Weight</td>
          <td><%= h @measurement.weight %></td>
        </tr>
        <tr>
          <td class="item">BMI</td>
          <td><%= h @measurement.bmi %></td>
        </tr>
        <tr>
          <td class="item">V02 Max</td>
          <td><%= h @measurement.v02_max %></td>
        </tr>
      </table>
      <br />
      <%= link_to 'Edit', edit_measurement_path(@measurement) %> |
      <%= link_to 'Back', user_measurements_path(@measurement.user) %>
    </div>
  </div>
<% end %>