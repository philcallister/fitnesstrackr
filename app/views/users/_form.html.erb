<script type="text/javascript">
  $(document).ready(function()
  {
    $(".goal-date").datepicker();
    $(".personal-date").datepicker({ changeYear: true, changeMonth: true, yearRange: '-100:+0'});
  });
</script>
<% if @account_type == User::ALL || @account_type == User::MAIN %>
  <h1>Account</h1>
  <div class="account-form">
    <%= form.label :login %><br />
    <%= form.text_field :login %><br />
    <br />
    <%= form.label :email %><br />
    <%= form.text_field :email %><br />
    <br />
    <%= form.label :password, form.object.new_record? ? nil : "Change password" %><br />
    <%= form.password_field :password %><br />
    <br />
    <%= form.label :password_confirmation %><br />
    <%= form.password_field :password_confirmation %><br />
    <br />
  </div>
<% end %>

<% if @account_type == User::ALL || @account_type == User::GOAL %>
  <h1>Goal</h1>
  <div class="account-form">
    <%= form.label :goal %><br />
    <%= form.text_area :goal, :rows => 2, :cols => 43 %><br />
    <br />
    <%= form.label :goal_start_date %><br />
    <% if @user.goal_start_date %>
      <%= form.text_field :goal_start_date, :class => 'goal-date', :value => @user.goal_start_date.strftime('%m/%d/%Y') %><br />
    <% else %>
      <%= form.text_field :goal_start_date, :class => 'goal-date' %><br />
    <% end %>
    <br />
    <%= form.label :goal_end_date %><br />
    <% if @user.goal_end_date %>
      <%= form.text_field :goal_end_date, :class => 'goal-date', :value => @user.goal_end_date.strftime('%m/%d/%Y') %><br />
    <% else %>
      <%= form.text_field :goal_end_date, :class => 'goal-date' %><br />
    <% end %>
    <br />
  </div>
<% end %>

<% if @account_type == User::ALL || @account_type == User::PERSONAL %>
  <h1>Personal</h1>
  <div class="account-form">
    <%= form.label :birthday %><br />
    <% if @user.birthday %>
      <%= form.text_field :birthday, :class => 'personal-date', :value => @user.birthday.strftime('%m/%d/%Y') %><br />
    <% else %>
      <%= form.text_field :birthday, :class => 'personal-date' %><br />
    <% end %>
    <br />
    <%= form.label :height %><br />
    <%= form.text_field :height %><br />
    <br />
  </div>
<% end %>