<% content_for :content do -%>
  <div class="container_12 clearfix">
    <div class="grid_12">
      <h1>Editing Cardio Plan</h1>
      <% if @workout_plan -%>
        <h2><%= h @workout_plan.workout_block.program.name %>&nbsp;>&nbsp;<%= h @workout_plan.workout_block.name %>&nbsp;>&nbsp;<%= h @workout_plan.name %></h2>
      <% end -%>
      <% form_for(@cardio_plan) do |f| %>
        <%= f.error_messages %>
        Exercise<br />
        <%= f.select('exercise_id', options_from_collection_for_select(@exercises, :id, :name, @cardio_plan.exercise.nil? ? nil : @cardio_plan.exercise.id),
                     {:prompt => '-Select Exercise'}) %><br />
        Notes<br />
        <%= f.text_field :notes %><br />
        Time<br />
        <%= f.text_field :time %><br />
        Level<br />
        <%= f.text_field :level %><br />
        Incline<br />
        <%= f.text_field :incline %><br />
        Speed<br />
        <%= f.text_field :speed %><br />
        Distance<br />
        <%= f.text_field :distance %><br />
        Calories<br />
        <%= f.text_field :calories %><br />
        Min Heartrate<br />
        <%= f.text_field :min_hr %><br />
        Max Heartrate<br />
        <%= f.text_field :max_hr %><br />
        <p>
          <%= f.submit 'Update' %>
        </p>
      <% end %>
      <br />
      <% if @workout_plan %>
        <%= link_to 'Back', workout_plan_exercise_plans_path(@workout_plan) %>
      <% end -%>
    </div>
  </div>
<% end %>