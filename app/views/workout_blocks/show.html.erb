<% content_for :content do -%>
  <div class="container_12 clearfix">
    <div class="grid_12">
      <h1>Showing Workout Block</h1>
      <% if @workout_block %>
        <h2><%= h @workout_block.program.name %></h2>
      <% end -%>
      <table cellpadding="0" cellspacing="0">
        <tr>
          <td class="item">Name</td>
          <td><%= h @workout_block.name %></td>
        </tr>
        <tr>
          <td class="item">Description</td>
          <td><%= h @workout_block.description %></td>
        </tr>
      </table>
      <br />
      <%= link_to 'Edit', edit_workout_block_path(@workout_block) %> |
      <%= link_to 'Back', program_workout_blocks_path(@workout_block.program) %>
    </div>
  </div>
<% end %>