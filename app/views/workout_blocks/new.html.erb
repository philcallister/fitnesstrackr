<% content_for :content do -%>
  <div class="container_12 clearfix">
    <div class="grid_12">
      <h1>New Workout Block</h1>
      <% if @program %>
        <h2><%= h @program.name %></h2>
      <% end -%>
      <% form_for(@workout_block) do |f| %>
        <%= f.error_messages %>
        <%= f.hidden_field :program_id %><br />
        Name<br />
        <%= f.text_field :name %><br />
        Description<br />
        <%= f.text_field :description %><br />
        <p>
          <%= f.submit 'Create' %>
        </p>
      <% end %>
      <br />
      <% if @program %>
        <%= link_to 'Back', program_workout_blocks_path(@program) %>
      <% end -%>
    </div>
  </div>
<% end %>